<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/content_resolver_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取内容提供器电话薄内容" />

    <Button
        android:id="@+id/content_provider_test_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试外部自定义内容提供者" />

    <Button
        android:id="@+id/notification_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试通知" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="短信from:" />

    <TextView
        android:id="@+id/sender_number_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="短信内容：" />

    <TextView
        android:id="@+id/sender_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="短信to:" />

    <EditText
        android:id="@+id/send_number_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="编写短信内容" />

    <EditText
        android:id="@+id/send_content_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送短信" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/take_photo_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="拍照" />

        <ImageView
            android:id="@+id/take_photo_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/choose_photo_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="获取图像" />

        <ImageView
            android:id="@+id/choose_photo_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </LinearLayout>

</LinearLayout>